<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Action para Cierre de Caja-->
        <record id="cierre_action" model="ir.actions.act_window">
            <field name="name">Cierre De Caja</field>
            <field name="res_model">cierre</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Presione aquÃ­ para crear un cierre de caja.</p>
            </field>
        </record>
        <!-- Vista Formulario Cierre de Caja-->
        <record id="fe_receptor_form_view" model="ir.ui.view">
            <field name="name">Cierre de Caja</field>
            <field name="view_type">form</field>
            <field name="model">cierre</field>
            <field name="arch" type="xml">
                <form string="Cierre de Caja" version="7.0">
                    <header>
                        <button attrs="{'invisible':[('state','not in',['nuevo'])]}" class="oe_highlight" name="action_abrir_caja" string="Abrir Caja" type="object"/>
                        <button attrs="{'invisible':[('state','not in',['en_proceso'])]}" class="oe_highlight" name="action_listo_para_revisar" string="Listo Para Revisar" type="object"/>
                        <button attrs="{'invisible':[('state','not in',['esperando_revision'])]}" class="oe_highlight" name="action_revisado" string="Revisado" type="object"/>
                        <button attrs="{'invisible':[('mostrar_boton_facturar','=', False)] }" class="oe_highlight" name="action_facturar" string="Facturar" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Cierre de Caja">
                        <h1 class="mt0">
                            <div>
                                <field class="oe_inline" name="name"/>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <field attrs="{'readonly':[('state','not in',['nuevo'])]}" name="tipo"/>
                                <field invisible="1" name="mostrar_boton_facturar"/>
                            </group>
                            <group>
                                <field attrs="{'invisible':[('state','not in',['revisado'])]}" name="revisado"/>
                                <field name="dinero_retorno"/>
                                <field name="dinero_balance"/>
                            </group>
                            <group string="Dineros Ingreso">
                                <field name="dinero_ingreso_caja"/>
                                <field name="dinero_ingreso_bns"/>
                                <field name="dinero_ingreso_ventas"/>
                                <field name="total_dinero_ingreso"/>
                            </group>
                            <group string="Dineros Salida">
                                <field name="dinero_salida"/>
                                <field name="dinero_compra_regular"/>
                                <field name="dinero_compra_ventana"/>
                                <field name="dinero_salida_total"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ingresos de Dinero">
                                <field name="ingreso_ids" colspan="4"  nolabel="1" widget="one2many_list" attrs="{'readonly':[('state','not in',['en_proceso'])]}" >
                                    <tree editable="bottom">
                                        <field name="detalle"/>
                                        <field name="tipo_ingreso"/>
                                        <field name="monto_ingreso" sum="True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Salidas de Dinero" attrs="{'readonly':[('state','not in',['en_proceso'])]}">
                                <field attrs="{'readonly': [('state','in',('lost'))]}" colspan="4" name="salida_ids" nolabel="1" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="detalle"/>
                                        <field name="monto" sum="True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Facturas">
                                <field name="factura_ids"/>
                            </page>
                            <page attrs="{'invisible':[('tipo','=','caja_chica')]}" string="Compras Ventana">
                                <field attrs="{'readonly':[('state','not in',['en_proceso'])]}" colspan="4" name="compra_ids" nolabel="1" widget="one2many_list">
                                    <tree default_order="consecutivo desc" editable="bottom">
                                        <field name="consecutivo"/>
                                        <field name="product_id"/>
                                        <field name="cantidad"/>
                                        <field name="monto" sum="True"/>
                                    </tree>
                                </field>
                            </page>
                            <page attrs="{'invisible':[('tipo','=','caja_chica')]}"  string="Inventario">
                                <field attrs="{'readonly': [('state','in',('revisado'))]}" colspan="4" name="inventario_ids" nolabel="1" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="precio_promedio"/>
                                        <field name="cantidad_compra"/>
                                        <field name="cantidad"/>
                                        <field name="diferencia"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Retorno de Dinero">
                                <field attrs="{'readonly':[('state','not in',['en_proceso'])]}" colspan="4" name="dinero_ids" nolabel="1" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="denominacion"/>
                                        <field name="cantidad"/>
                                        <field name="total" sum="True"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--Tree View Cierre de Caja-->
        <record id="cierre_tree_view" model="ir.ui.view">
            <field name="name">cierre.tree.view</field>
            <field name="view_type">tree</field>
            <field name="model">cierre</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='en_proceso'" string="Cierre de Caja" default_order='fecha desc'>
                    <field name="fecha"/>
                    <field name="cajero"/>
                    <field name="tipo"/>
                    <field name="state" string="Estado"/>
                </tree>
            </field>
        </record>
        <!-- Top menu item -->
        <menuitem id="menu_purchase_root_cierre_caja" name="Cierre Caja" sequence="30" web_icon="odoo12-cierre_caja,static/icon.png"/>
        <!--Menus-->
        <menuitem id="cierrecaja" name="Cierre de Caja"/>
        <menuitem id="cierrecaja_menu" name="Cierres" parent="menu_purchase_root_cierre_caja"/>
        <menuitem action="cierre_action" id="cierre_libro_menu" name="Cierres Diarios" parent="cierrecaja_menu"/>
    </data>
</odoo>